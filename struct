#include <stdio.h>

int main(void) {
  struct Registro{
    char nome[10];
    int idade;
    float salario;
  };
  struct Registro empresa[3];
  int i;
  for(i=0;i<3;i++){
    printf("Nome do funcionario ");
    scanf("%s",& empresa[i].nome);
    printf("Idade do funcionario ");
    scanf("%d",& empresa[i].idade);
    printf("Salario do funcionario ");
    scanf("%f",& empresa[i].salario);
  }
  return 0;
}
